{
    "manifest_version": 3,
    "name": "MeetingMinutes Streamer",
    "version": "1.0",
    "description": "Stream meeting audio to MeetingMinutes for live transcription",
    "permissions": [
        "tabCapture",
        "offscreen",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "http://localhost:5173/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:5173/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "offscreen.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}